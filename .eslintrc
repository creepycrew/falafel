{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "_": false,
        "falafel": true,
        "when": false
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "ignoredNodes": [
                    "ConditionalExpression"
                ],
                "MemberExpression": 0,
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
